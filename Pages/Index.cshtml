@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<br>
<h2>List of users</h2>
<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Address</th>
			<th>Password</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.listClients)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.firstName</td>
				<td>@item.lastName</td>
				<td>@item.email</td>
				<td>@item.phone</td>
				<td>@item.address</td>
				<td>@item.password</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/Clients/Update?id=@item.id">Receive</a>
					<a class="btn btn-danger btn-sm" href="/Clients/Delete?id=@item.id">Donate</a>
				</td>
			</tr>
		}
	</tbody>
</table>