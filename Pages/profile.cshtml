@page
@model LifeLink.Pages.profileModel
@{
}

@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<form method="post">
	<h1>My Profile</h1>
	<div>
		<h2>Personal Info</h2>
		<div class="row mb-3">
			<label class="col-sm-3 col-form-label">First Name</label>
			<div class="col-sm-6">
				<input type="text" class="form-control" name="fname" value="@Model.profileInfo.firstName">
			</div>
		</div>

		<div class="row mb-3">
			<label class="col-sm-3 col-form-label">last Name</label>
			<div class="col-sm-6">
				<input type="text" class="form-control" name="lname" value="@Model.profileInfo.lastName">
			</div>
		</div>
		
		<div class="row mb-3">
			<label class="col-sm-3 col-form-label">email</label>
			<div class="col-sm-6">
				<input type="text" class="form-control" name="email" value="@Model.profileInfo.email">
			</div>
		</div>
		
		<div class="row mb-3">
			<label class="col-sm-3 col-form-label">Phone</label>
			<div class="col-sm-6">
				<input type="text" class="form-control" name="phone" value="@Model.profileInfo.phone">
			</div>
		</div>
		
		<div class="row mb-3">
			<label class="col-sm-3 col-form-label">Address</label>
			<div class="col-sm-6">
				<input type="text" class="form-control" name="address" value="@Model.profileInfo.address">
			</div>
		</div>
		@if (Model.successMessage.Length > 0)
		{
			<div class="row mb-3">
				<div class="col sm-9">
					<div class="alert alert-success alert-dismissible fade show" role="alert">
						<strong>@Model.successMessage</strong>
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				</div>
			</div>
		}
	</div>

	<div>
		<div class="row mb-3">
			<div class="offset-sm-3 col-sm-3 d-grid">
				<button type="submit" class="btn btn-primary">Register</button>
			</div>
			<div class="col-sm-3 d-grid">
				<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
			</div>
		</div>
	</div>

</form>
